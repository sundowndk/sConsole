<sui>
	<container title="Settings" icon="Icon32Edit" stylesheet="SUIContainerNoBorder">		
		<layoutbox type="horizontal" stylesheet="LayoutboxNoborder">
			<panel size="*">				
				<tabview>
					<tab label="Engine" selected="true">
						<layoutbox type="horizontal" stylesheet="LayoutboxNoborder">			
							<panel size="*">
								<layoutbox type="horizontal">			
									<panel size="*">
										<text text="Problems with broken URLs could be because hostname is either missing or incorrectly specified."/>
									</panel>					
									<panel size="%elementheight%">
										<layoutbox type="vertical">
											<panel size="130px">
												<label text="Hostname"/>
											</panel>					
											<panel size="*">
												<textbox tag="corehostname" width="100%" />
											</panel>					
										</layoutbox>
									</panel>
									<panel size="*">
										<text text=""/>
									</panel>					
									<panel size="%elementheight%">
										<layoutbox type="vertical">
											<panel size="130px">
												<label text="Enable cache"/>
											</panel>					
											<panel size="*">
												<checkbox tag="coreenablecache" />
											</panel>					
										</layoutbox>
									</panel>									
									<panel size="*">
										<text text=""/>
									</panel>					
									<panel size="%elementheight%">
										<layoutbox type="vertical">
											<panel size="130px">
												<label text="Max connections"/>
											</panel>					
											<panel size="*">
												<textbox tag="fastcgimaxconnections" width="100%" />
											</panel>					
										</layoutbox>
									</panel>
									<panel size="*">
										<text text=""/>
									</panel>					
									<panel size="%elementheight%">
										<layoutbox type="vertical">
											<panel size="130px">
												<label text="Max requests"/>
											</panel>					
											<panel size="*">
												<textbox tag="fastcgimaxrequests" width="100%" />
											</panel>					
										</layoutbox>
									</panel>									
									<panel size="*">
										<text text="Trouble with special language characteres is usally connected to wrong text encoding settings."/>
									</panel>
									<panel size="%elementheight%">
										<layoutbox type="vertical">
											<panel size="130px">
												<label text="Encoding"/>
											</panel>					
											<panel size="*">
												<dropbox tag="coreencoding" width="100%">
													<item value="UTF-8" label="UTF-8" />														
													<item value="ISO-8859-15" label="ISO-8859-15"/>	
												</dropbox>											
											</panel>					
										</layoutbox>
									</panel>			
									<panel size="*">
										<text text=""/>
									</panel>
									<panel size="%elementheight%">
										<layoutbox type="vertical">
											<panel size="130px">
												<label text="Loglevel"/>
											</panel>					
											<panel size="*">
												<textbox tag="coreloglevel" width="100%" />
											</panel>																
										</layoutbox>
									</panel>														
								</layoutbox>
							</panel>
						</layoutbox>												
					</tab>
				<tab label="Database">
					<layoutbox type="horizontal" stylesheet="LayoutboxNoborder">			
						<panel size="*">
							<layoutbox type="horizontal">			
								<panel size="%elementheight%">
									<layoutbox type="vertical">
										<panel size="130px">
											<label text="Connector"/>
										</panel>					
										<panel size="*">
											<dropbox tag="databasedriver" width="100%">
												<item value="mysql" label="MySQL" />	
												<item value="mssql" label="MSSQL" />
											</dropbox>											
										</panel>					
									</layoutbox>
								</panel>							
							
								<panel size="*">
									<text text=""/>
								</panel>					
								<panel size="%elementheight%">
									<layoutbox type="vertical">
										<panel size="130px">
											<label text="Server"/>
										</panel>					
										<panel size="*">
											<textbox tag="databasehostname" width="100%" />
										</panel>					
									</layoutbox>
								</panel>

								<panel size="*">
									<text text=""/>
								</panel>					
								<panel size="%elementheight%">
									<layoutbox type="vertical">
										<panel size="130px">
											<label text="Database"/>
										</panel>					
										<panel size="*">
											<textbox tag="databasedatabase" width="100%" />
										</panel>					
									</layoutbox>
								</panel>							
								<panel size="*">
									<text text="Database prefix is pretty handy if you want to server multiple installations from the same database. If you change these settings remember to rename your tables in your database accordingly."/>
								</panel>									
								<panel size="%elementheight%">
									<layoutbox type="vertical">
										<panel size="130px">
											<label text="Prefix"/>
										</panel>					
										<panel size="*">
											<textbox tag="databaseprefix" width="100%" />
										</panel>					
									</layoutbox>
								</panel>																					
								<panel size="*">
									<text text=""/>
								</panel>					
								<panel size="%elementheight%">
									<layoutbox type="vertical">
										<panel size="130px">
											<label text="Username"/>
										</panel>					
										<panel size="*">
											<textbox tag="databaseusername" width="100%" />
										</panel>					
									</layoutbox>
								</panel>							
								<panel size="*">
									<text text=""/>
								</panel>					
								<panel size="%elementheight%">
									<layoutbox type="vertical">
										<panel size="130px">
											<label text="Password"/>
										</panel>					
										<panel size="*">
											<textbox tag="databasepassword" width="100%" password="true"/>
										</panel>					
									</layoutbox>
								</panel>							
							
							</layoutbox>
						</panel>
					</layoutbox>										
				</tab>
				<tab label="Paths">
					<layoutbox type="horizontal" stylesheet="LayoutboxNoborder">			
						<panel size="*">
							<layoutbox type="horizontal">			
								<panel size="*">
									<text text=""/>
								</panel>					
								<panel size="%elementheight%">
									<layoutbox type="vertical">
										<panel size="130px">
											<label text="Content"/>
										</panel>					
										<panel size="*">
											<textbox tag="corepathcontent" width="100%" />
										</panel>					
									</layoutbox>
								</panel>
								<panel size="*">
									<text text=""/>
								</panel>					
								<panel size="%elementheight%">
									<layoutbox type="vertical">
										<panel size="130px">
											<label text="HTML"/>
										</panel>					
										<panel size="*">
											<textbox tag="corepathhtmlroot" width="100%" />
										</panel>					
									</layoutbox>
								</panel>									
								<panel size="*">
									<text text=""/>
								</panel>					
								<panel size="%elementheight%">
									<layoutbox type="vertical">
										<panel size="130px">
											<label text="Media"/>
										</panel>					
										<panel size="*">
											<textbox tag="corepathmedia" width="100%" />
										</panel>					
									</layoutbox>
								</panel>								
								<panel size="*">
									<text text=""/>
								</panel>					
								<panel size="%elementheight%">
									<layoutbox type="vertical">
										<panel size="130px">
											<label text="Public media"/>
										</panel>					
										<panel size="*">
											<textbox tag="corepathpublicmedia" width="100%" />
										</panel>					
									</layoutbox>
								</panel>
								<panel size="*">
									<text text=""/>
								</panel>					
								<panel size="%elementheight%">
									<layoutbox type="vertical">
										<panel size="130px">
											<label text="Snapshots"/>
										</panel>					
										<panel size="*">
											<textbox tag="corepathsnapshot" width="100%" />
										</panel>					
									</layoutbox>
								</panel>									
								<panel size="*">
									<text text=""/>
								</panel>					
								<panel size="%elementheight%">
									<layoutbox type="vertical">
										<panel size="130px">
											<label text="Scripts"/>
										</panel>					
										<panel size="*">
											<textbox tag="corepathscript" width="100%" />
										</panel>					
									</layoutbox>
								</panel>								
								<panel size="*">
									<text text=""/>
								</panel>					
								<panel size="%elementheight%">
									<layoutbox type="vertical">
										<panel size="130px">
											<label text="Temp"/>
										</panel>					
										<panel size="*">
											<textbox tag="corepathtmp" width="100%" />
										</panel>					
									</layoutbox>
								</panel>
							</layoutbox>
						</panel>							
					</layoutbox>																				
				</tab>						
				<tab label="SMTP">
					<layoutbox type="horizontal" stylesheet="LayoutboxNoborder">			
						<panel size="*">
							<layoutbox type="horizontal">			
								<panel size="*">
									<text text=""/>
								</panel>					
								<panel size="%elementheight%">
									<layoutbox type="vertical">
										<panel size="130px">
											<label text="Server"/>
										</panel>					
										<panel size="*">
											<textbox tag="smtpserver" width="100%" />
										</panel>					
									</layoutbox>
								</panel>
								<panel size="*">
									<text text=""/>
								</panel>
								<panel size="%elementheight%">
									<layoutbox type="vertical">
										<panel size="130px">
											<label text="Encoding"/>
										</panel>					
										<panel size="*">
											<dropbox tag="smtpencoding" width="100%">
												<item value="UTF-8" label="UTF-8" />				
												<item value="ISO-8859-15" label="ISO-8859-15"/>										
											</dropbox>											
										</panel>					
									</layoutbox>
								</panel>							
							</layoutbox>
						</panel>
					</layoutbox>														
				</tab>			
			</tabview>
		</panel>	
		<panel size="45px">
			<layoutbox type="vertical" stylesheet="LayoutboxNoborder">
				<panel size="*">								
				</panel>
				<panel size="105px">
					<button tag="button1" label="Save" width="100px" disabled="true"/>							
				</panel>						
			</layoutbox>
		</panel>
			</layoutbox>

	</container>	
</sui>

