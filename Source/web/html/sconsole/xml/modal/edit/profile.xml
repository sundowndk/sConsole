<sui elementheight="50px">
	<canvas width="450px" height="500px" canScroll="false">	
		<container title="Edit profile" icon="Icon32Edit" stylesheet="SUIContainerModal">
			<layoutbox type="horizontal" stylesheet="LayoutboxNoborder">			
				<panel size="*">
					<layoutbox type="horizontal">			
						<panel size="%elementheight%">
							<layoutbox type="vertical">
								<panel size="100px">
									<label text="Username"/>
								</panel>					
								<panel size="*">
									<textbox tag="username" width="100%" disabled="true" />
								</panel>					
							</layoutbox>
						</panel>
						<panel size="%elementheight%">
							<layoutbox type="vertical">
								<panel size="100px">
									<label text="Realname"/>
								</panel>					
								<panel size="*">
									<textbox tag="realname" width="100%" focus="true" />
								</panel>					
							</layoutbox>
						</panel>
						<panel size="%elementheight%">
							<layoutbox type="vertical">
								<panel size="100px">
									<label text="Email"/>
								</panel>					
								<panel size="*">
									<textbox tag="email" width="100%" />
								</panel>					
							</layoutbox>
						</panel>
						<panel size="%elementheight%">
							<layoutbox type="vertical">
								<panel size="100px">
									<label text="Password"/>
							</panel>					
								<panel size="*">
									<button tag="changepassword" label="Change password" width="100%" disabled="false"/>														
								</panel>					
							</layoutbox>
						</panel>
						<panel size="*">
						</panel>
					</layoutbox>
				</panel>
				<panel size="45px">
					<layoutbox type="vertical">
						<panel size="*">								
						</panel>
						<panel size="210px">
							<button tag="save" label="Save" width="100px" disabled="true"/>
							<button tag="close" label="Close" width="100px" />
						</panel>						
					</layoutbox>
				</panel>
			</layoutbox>				
		</container>
	</canvas>
</sui>



