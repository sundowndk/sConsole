<sui elementheight="50px">
	<canvas width="600px" height="280px" canScroll="false">	
		<container title="Change password" icon="Icon32Edit"  stylesheet="SUIContainerModal">
			<layoutbox type="horizontal" stylesheet="LayoutboxNoborder">			
				<panel size="%elementheight%">
					<layoutbox type="vertical">
						<panel size="100px">
							<label text="Current"/>
						</panel>					
						<panel size="*">
							<textbox tag="current" width="100%" password="true" focus="true" />
						</panel>					
					</layoutbox>
				</panel>
				<panel size="%elementheight%">
					<layoutbox type="vertical">
						<panel size="100px">
							<label text="New"/>
						</panel>					
						<panel size="*">
							<textbox tag="new" width="100%" password="true" />
						</panel>					
					</layoutbox>
				</panel>
				<panel size="%elementheight%">
					<layoutbox type="vertical">
						<panel size="100px">
							<label text="Repeat"/>
						</panel>					
						<panel size="*">
							<textbox tag="repeat" width="100%" password="true" />
						</panel>					
					</layoutbox>
				</panel>
				<panel size="*">
				</panel>
				<panel size="45px">
					<layoutbox type="vertical">
						<panel size="*">
						</panel>
						<panel size="210px">
							<button tag="change" label="Change" width="100px" disabled="true"/>
							<button tag="close" label="Close" width="100px" />
						</panel>						
					</layoutbox>
				</panel>
			</layoutbox>
		</container>
	</canvas>
</sui>

