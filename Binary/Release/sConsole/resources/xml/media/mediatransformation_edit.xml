<sui elementheight="50px">
	<canvas width="800px" height="400px" canScroll="false">	
		<container title="Edit mediatransformation" icon="Icon32Edit" stylesheet="SUIContainerModal">
			<layoutbox type="horizontal" stylesheet="LayoutboxNoborder">			
				<panel size="*">
					<tabview>
						<tab label="Details" selected="true">
							<layoutbox type="horizontal">			
								<panel size="%elementheight%">
									<layoutbox type="vertical">
										<panel size="100px">
											<label text="Title"/>
										</panel>					
										<panel size="*">
											<textbox tag="title" width="100%" />
										</panel>					
									</layoutbox>
								</panel>
								<panel size="*">			
									<layoutbox type="vertical">
										<panel size="100px">
											<label text="Mimetypes" />
										</panel>
										<panel size="*">
											<listview tag="mimetypes" width="100%" height="100%" unique="value">												
												<column tag="value" label="" width="200px" visible="true" />												
											</listview>
										</panel>					
										<panel size="80px">
											<button tag="mimetypeadd" stylesheet="SUIButtonSmall" width="100%" label="Add" />
											<button tag="mimetypeedit" stylesheet="SUIButtonSmall" width="100%" label="Edit" disabled="true" />
											<button tag="mimetyperemove" stylesheet="SUIButtonSmall" width="100%" label="Remove" disabled="true" />
										</panel>
									</layoutbox>			
								</panel>
							</layoutbox>
						</tab>
						<tab label="Script">
							<layoutbox type="horizontal">			
								<panel size="*">										
									<textarea tag="script" width="100%" height="100%">
										<codemirror lineNumbers="true" textWrapping="false" enterMode="keep" mode="xml" />
									</textarea>		
								</panel>
							</layoutbox>					
						</tab>
					</tabview>
				</panel>
				<panel size="45px">
					<layoutbox type="vertical">
						<panel size="*">							
						</panel>
						<panel size="210px">
							<button tag="save" label="Save" width="100px" disabled="true"/>
							<button tag="close" label="Close" width="100px" />
						</panel>						
					</layoutbox>
				</panel>
			</layoutbox>				
		</container>
	</canvas>
</sui>





